@model Bel.Models.ActiveReservationViewModel
@{
    ViewBag.Title = "ActiveReservationForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="width:80%">
            <section class="banner-area relative about-banner" id="home">
                <div class="overlay overlay-bg"></div>
                <div class="container">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="about-content col-lg-12">
                            <h1 class="text-white">
                                Aktif Rezervasyonlar
                            </h1>
                        </div>
                    </div>
                </div>
            </section>
            <section class="popular-course-area section-gap no-padding">
                <div class="container">
                    <table class="table table-hover" style="cursor:pointer" id="tbldata">
                        <thead>
                            <tr>
                                <td>Danışman Bilgisi</td>
                                <td>Rezervasyon Tarihi</td>
                                <td>Okul Adı</td>
                                <td>Sınıf</td>
                                <td>Okul Sınıfı</td>
                                <td>Saat</td>
                                <td>Detay</td>
                                <td>Sil</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Reservations)
                            {
                                <tr>
                                    <td>@item.AdvisorName</td>
                                    <td>@item.ReservationDate</td>
                                    <td>@item.UserName</td>
                                    <td>@item.MunicipalityClassName</td>
                                    <td>@item.SchoolClassName</td>
                                    <td>@item.Hour</td>
                                    <td>@Html.ActionLink("Detay", "DetailReservation", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                                    <td>@Html.ActionLink("Sil", "DeleteReservation", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>


<!-- jQuery Modal -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

<link href="~/Content/paging.css" rel="stylesheet" />
<script src="~/Scripts/paging.js"></script>
<script type="text/javascript">
    $(function () {
        $('#tbldata').paging({ limit: 5 });
    })
</script>
