
@{
    ViewBag.Title = "ActiveAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("jquery-2.2.4.min");
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Aktif Randevular
                </h1>

            </div>
        </div>
    </div>
</section>
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="width:80%">
            <section class="popular-course-area section-gap no-padding">
                <div class="container">
                    <table class="table table-hover" style="cursor:pointer">
                        <thead>
                            <tr>
                                <td>Danışman Adı</td>
                                <td>Rezervasyon Tarihi</td>
                                <td>Okul Adı</td>
                                <td>Gidilecek Sınıf</td>
                                <td>Götürülen Sınıf</td>
                                <td>Saat</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Reservations)
                            {
                                <tr>
                                    <td>@item.AdvisorName</td>
                                    <td>@item.ReservationDate</td>
                                    <td>@item.UserName</td>
                                    <td>@item.MunicipalityClassName</td>
                                    <td>@item.SchoolName</td>
                                    <td>@item.Hour</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>

