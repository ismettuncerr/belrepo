
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("jquery-2.2.4.min");
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Haberler
                </h1>

            </div>
        </div>
    </div>
</section>
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="width:80%">
            <section class="popular-course-area section-gap no-padding">
                <div class="container">

                    <div>
                        <a href="/News/NewsCreate" style="width:40%" class="login100-form-btn">Yeni Haber Ekle</a>
                    </div>
                    </br>
                    <table class="table table-hover" style="cursor:pointer" id="tbldata">
                        <thead>
                            <tr>
                                <td>Fotoğraf</td>
                                <td>Başlık</td>
                                <td>Özet</td>
                                <td>Düzenle</td>
                                <td>Sil</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.News)
                            {
                            <tr>
                                <td><img src="~/Content/news/@item.NewsImage" height="30" /></td>
                                <td>@item.NewsHeadline</td>
                                <td style="clear:both;">@item.NewsBrief</td>
                                <td>@Html.ActionLink("Düzenle", "EditNew", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                                <td>@Html.ActionLink("Sil", "DeleteNew", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                                @*<td><input class="btn btn-danger btnSubmit" type="submit" value="Sil" /></td>*@
                                <!--<td>@Html.ActionLink("Detail", "DetailReservation", new { id = item.Id }, new { @class = "btn btn-danger" })</td>-->
                            </tr>


                            }
                        </tbody>
                    </table>
                    @ViewBag.Message
                </div>
            </section>
        </div>
    </div>
</div>
<link href="~/Content/paging.css" rel="stylesheet" />
<script src="~/Scripts/paging.js"></script>
<script type="text/javascript">
    $(function () {
        $('#tbldata').paging({ limit: 5 });
    })
</script>