
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("jquery-2.2.4.min");
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Haberler
                </h1>

            </div>
        </div>
    </div>
</section>
<section class="course-details-area pt-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 left-contents">
                <div class="jq-tab-wrapper" id="horizontalTab">
                    <div class="container">
 <div>
                            <a href="/News/NewsCreate" style="width:40%" class="login100-form-btn">Yeni Haber Ekle</a>
                        </div>
                        <br />
                        <table class="table table-hover" style="cursor:pointer">
                            <thead>
                                <tr>
                                    <td>Fotoğraf</td>
                                    <td>Başlık</td>
                                    <td>Özet</td>
									<td>Düzenle</td>
                                    <td>Sil</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.News)
                                {
                                    <tr>
                                        <td><img src="~/Content/news/@item.NewsImage" height="30" /></td>
                                        <td>@(new HtmlString(@item.NewsHeadline))</td>
                                        <td style="clear:both;">@(new HtmlString(@item.NewsBrief))</td>
										<td>@Html.ActionLink("Düzenle", "EditNew", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                                       <td>@Html.ActionLink("Sil", "DeleteNew", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                                        <!--<td>@Html.ActionLink("Detail", "DetailReservation", new { id = item.Id }, new { @class = "btn btn-danger" })</td>-->
                                    </tr>


                                }
                            </tbody>
                        </table>
						@ViewBag.Message
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<br />
<br />
<br />
<link href="~/Content/paging.css" rel="stylesheet" />
<script src="~/Scripts/paging.js"></script>
<script type="text/javascript">
    $(function () {
        $('#tbldata').paging({ limit: 5 });
    })
</script>
